#!/bin/bash

# å…±é€šãƒ©ã‚¤ãƒ–ãƒ©ãƒªã‚’èª­ã¿è¾¼ã¿
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "$SCRIPT_DIR/../lib/common.sh"

# ä½¿ç”¨æ–¹æ³•
usage() {
    echo -e "${CYAN}${BOLD}ğŸ¬ å‹•ç”»é™æ­¢ç”»æŠ½å‡ºãƒ„ãƒ¼ãƒ«${NC}"
    echo
    echo -e "${CYAN}ä½¿ç”¨æ–¹æ³•:${NC}"
    echo "  video-extract [ã‚ªãƒ—ã‚·ãƒ§ãƒ³] video1.mp4 [video2.mp4 ...]"
    echo
    echo -e "${CYAN}ã‚ªãƒ—ã‚·ãƒ§ãƒ³:${NC}"
    echo "  -h, --help       ã“ã®ãƒ˜ãƒ«ãƒ—ã‚’è¡¨ç¤º"
    echo "  -o, --output     å‡ºåŠ›ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã‚’æŒ‡å®š"
    echo "  -f, --format     å‡ºåŠ›å½¢å¼ (png, jpg) [ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆ: jpg]"
    echo "  -q, --quality    JPGå“è³ª (1-100) [ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆ: 90]"
    echo "  -s, --size       å‡ºåŠ›è§£åƒåº¦ (ä¾‹: 1920x1080)"
    echo "  -i, --interval   æŠ½å‡ºé–“éš”ï¼ˆç§’ï¼‰ [ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆ: 10]"
    echo "  -t, --time       ç‰¹å®šã®æ™‚é–“ã§æŠ½å‡º (ä¾‹: 00:01:30)"
    echo "  -n, --number     æŠ½å‡ºã™ã‚‹æšæ•°ã‚’æŒ‡å®š"
    echo "  --thumbnail      ã‚µãƒ ãƒã‚¤ãƒ«æŠ½å‡ºï¼ˆé–‹å§‹ãƒ»ä¸­é–“ãƒ»çµ‚äº†ï¼‰"
    echo "  --keyframes      ã‚­ãƒ¼ãƒ•ãƒ¬ãƒ¼ãƒ ã®ã¿æŠ½å‡º"
    echo "  --organize       æ—¥ä»˜åˆ¥ã«ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã‚’ä½œæˆ"
    echo
    echo -e "${CYAN}ä¾‹:${NC}"
    echo "  video-extract video.mp4"
    echo "  video-extract -i 5 -f png *.mp4"
    echo "  video-extract -t 00:01:30 video.mp4"
    echo "  video-extract --thumbnail -o ~/Images *.mp4"
    echo "  video-extract -n 10 --keyframes video.mp4"
}

# ã‚ªãƒ—ã‚·ãƒ§ãƒ³è§£æ
OUTPUT_DIR=""
FORMAT="jpg"
QUALITY=""
SIZE=""
INTERVAL="10"
SPECIFIC_TIME=""
NUMBER=""
THUMBNAIL_MODE=false
KEYFRAMES_ONLY=false
ORGANIZE_OUTPUT=false
FILES=()

while [[ $# -gt 0 ]]; do
    case $1 in
        -h|--help)
            usage
            exit 0
            ;;
        -o|--output)
            OUTPUT_DIR="$2"
            shift 2
            ;;
        -f|--format)
            FORMAT="$2"
            shift 2
            ;;
        -q|--quality)
            QUALITY="$2"
            shift 2
            ;;
        -s|--size)
            SIZE="$2"
            shift 2
            ;;
        -i|--interval)
            INTERVAL="$2"
            shift 2
            ;;
        -t|--time)
            SPECIFIC_TIME="$2"
            shift 2
            ;;
        -n|--number)
            NUMBER="$2"
            shift 2
            ;;
        --thumbnail)
            THUMBNAIL_MODE=true
            shift
            ;;
        --keyframes)
            KEYFRAMES_ONLY=true
            shift
            ;;
        --organize)
            ORGANIZE_OUTPUT=true
            shift
            ;;
        -*)
            echo -e "${RED}âŒ ä¸æ˜ãªã‚ªãƒ—ã‚·ãƒ§ãƒ³: $1${NC}"
            usage
            exit 1
            ;;
        *)
            FILES+=("$1")
            shift
            ;;
    esac
done

# ãƒ•ã‚¡ã‚¤ãƒ«å¼•æ•°ãƒã‚§ãƒƒã‚¯
if [[ ${#FILES[@]} -eq 0 ]]; then
    usage
    exit 0
fi

# ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆãƒã‚§ãƒƒã‚¯
if [[ "$FORMAT" != "jpg" && "$FORMAT" != "png" ]]; then
    echo -e "${RED}âŒ ã‚¨ãƒ©ãƒ¼: ã‚µãƒãƒ¼ãƒˆã•ã‚Œã¦ã„ãªã„å½¢å¼: $FORMAT${NC}"
    echo -e "${YELLOW}ã‚µãƒãƒ¼ãƒˆå½¢å¼: jpg, png${NC}"
    exit 1
fi

# å“è³ªè¨­å®š
if [[ -z "$QUALITY" ]]; then
    QUALITY=${JPG_QUALITY:-90}
fi

# ä¾å­˜é–¢ä¿‚ãƒã‚§ãƒƒã‚¯
if ! check_dependency "ffmpeg" "ffmpeg"; then
    echo -e "${YELLOW}macOS: brew install ffmpeg${NC}"
    echo -e "${YELLOW}Ubuntu: sudo apt install ffmpeg${NC}"
    exit 1
fi

# å‹•ç”»æƒ…å ±å–å¾—
get_video_info() {
    local video=$1
    local duration=$(ffprobe -v quiet -show_entries format=duration -of default=noprint_wrappers=1:nokey=1 "$video" 2>/dev/null)
    local fps=$(ffprobe -v quiet -show_entries stream=r_frame_rate -select_streams v:0 -of default=noprint_wrappers=1:nokey=1 "$video" 2>/dev/null | head -1)
    local resolution=$(ffprobe -v quiet -show_entries stream=width,height -select_streams v:0 -of csv=s=x:p=0 "$video" 2>/dev/null)
    
    # FPSè¨ˆç®—
    if [[ "$fps" == *"/"* ]]; then
        local num=${fps%/*}
        local den=${fps#*/}
        fps=$(echo "scale=2; $num / $den" | bc 2>/dev/null || echo "30")
    fi
    
    echo "duration=${duration:-0} fps=${fps:-30} resolution=${resolution:-unknown}"
}

# å‡ºåŠ›ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªç”Ÿæˆ
generate_output_dir() {
    local video=$1
    local base_output_dir=$2
    
    local basename=$(basename "$video")
    local filename="${basename%.*}"
    
    if [[ "$ORGANIZE_OUTPUT" == "true" ]]; then
        local date_dir=$(date +%Y-%m-%d)
        local output_dir="$base_output_dir/$date_dir/$filename"
    elif [[ -n "$base_output_dir" ]]; then
        local output_dir="$base_output_dir/$filename"
    else
        local output_dir="${video%.*}_frames"
    fi
    
    mkdir -p "$output_dir"
    echo "$output_dir"
}

# é™æ­¢ç”»æŠ½å‡º
extract_frames() {
    local video=$1
    local output_dir=$2
    local basename=$(basename "$video")
    local filename="${basename%.*}"
    
    echo -e "${BLUE}ğŸ“¹ å‹•ç”»æƒ…å ±ã‚’å–å¾—ä¸­...${NC}"
    local video_info=$(get_video_info "$video")
    eval "$video_info"
    
    echo -e "${BLUE}   è§£åƒåº¦: ${resolution} | FPS: ${fps} | é•·ã•: $(format_duration ${duration%.*})${NC}"
    
    local ffmpeg_opts=()
    local output_pattern="$output_dir/${filename}_%04d.$FORMAT"
    
    # ã‚µã‚¤ã‚ºæŒ‡å®š
    if [[ -n "$SIZE" ]]; then
        ffmpeg_opts+=(-vf "scale=$SIZE")
    fi
    
    # å“è³ªè¨­å®š
    if [[ "$FORMAT" == "jpg" ]]; then
        ffmpeg_opts+=(-q:v "$QUALITY")
    fi
    
    local extraction_count=0
    
    if [[ "$THUMBNAIL_MODE" == "true" ]]; then
        # ã‚µãƒ ãƒã‚¤ãƒ«æŠ½å‡ºï¼ˆé–‹å§‹ãƒ»ä¸­é–“ãƒ»çµ‚äº†ï¼‰
        echo -e "${BLUE}ğŸ–¼ï¸  ã‚µãƒ ãƒã‚¤ãƒ«æŠ½å‡ºä¸­...${NC}"
        
        local start_time="00:00:01"
        local mid_time=$(echo "scale=0; ${duration%.*} / 2" | bc)
        local end_time=$(echo "scale=0; ${duration%.*} - 1" | bc)
        
        # é–‹å§‹
        if ffmpeg -i "$video" -ss "$start_time" -vframes 1 "${ffmpeg_opts[@]}" "$output_dir/${filename}_start.$FORMAT" -loglevel error -hide_banner 2>/dev/null; then
            ((extraction_count++))
        fi
        
        # ä¸­é–“
        if ffmpeg -i "$video" -ss "$mid_time" -vframes 1 "${ffmpeg_opts[@]}" "$output_dir/${filename}_middle.$FORMAT" -loglevel error -hide_banner 2>/dev/null; then
            ((extraction_count++))
        fi
        
        # çµ‚äº†
        if ffmpeg -i "$video" -ss "$end_time" -vframes 1 "${ffmpeg_opts[@]}" "$output_dir/${filename}_end.$FORMAT" -loglevel error -hide_banner 2>/dev/null; then
            ((extraction_count++))
        fi
        
    elif [[ -n "$SPECIFIC_TIME" ]]; then
        # ç‰¹å®šæ™‚é–“ã§ã®æŠ½å‡º
        echo -e "${BLUE}â° ç‰¹å®šæ™‚é–“ã§ã®æŠ½å‡ºä¸­... (${SPECIFIC_TIME})${NC}"
        
        if ffmpeg -i "$video" -ss "$SPECIFIC_TIME" -vframes 1 "${ffmpeg_opts[@]}" "$output_dir/${filename}_${SPECIFIC_TIME//:/-}.$FORMAT" -loglevel error -hide_banner 2>/dev/null; then
            extraction_count=1
        fi
        
    elif [[ "$KEYFRAMES_ONLY" == "true" ]]; then
        # ã‚­ãƒ¼ãƒ•ãƒ¬ãƒ¼ãƒ æŠ½å‡º
        echo -e "${BLUE}ğŸ”‘ ã‚­ãƒ¼ãƒ•ãƒ¬ãƒ¼ãƒ æŠ½å‡ºä¸­...${NC}"
        
        local keyframe_opts=(-vf "select='eq(pict_type,PICT_TYPE_I)'")
        if [[ -n "$NUMBER" ]]; then
            keyframe_opts=(-vf "select='eq(pict_type,PICT_TYPE_I)',select='not(mod(n,$((${duration%.*} / NUMBER))))'")
        fi
        
        if ffmpeg -i "$video" "${keyframe_opts[@]}" "${ffmpeg_opts[@]}" -vsync vfr "$output_pattern" -loglevel error -hide_banner 2>/dev/null; then
            extraction_count=$(find "$output_dir" -name "${filename}_*.$FORMAT" | wc -l)
        fi
        
    elif [[ -n "$NUMBER" ]]; then
        # æŒ‡å®šæšæ•°ã§ã®æŠ½å‡º
        echo -e "${BLUE}ğŸ¯ æŒ‡å®šæšæ•°ã§ã®æŠ½å‡ºä¸­... (${NUMBER}æš)${NC}"
        
        local frame_interval=$(echo "scale=2; ${duration%.*} / $NUMBER" | bc)
        if ffmpeg -i "$video" -vf "fps=1/$frame_interval" "${ffmpeg_opts[@]}" "$output_pattern" -loglevel error -hide_banner 2>/dev/null; then
            extraction_count=$(find "$output_dir" -name "${filename}_*.$FORMAT" | wc -l)
        fi
        
    else
        # é–“éš”æŒ‡å®šã§ã®æŠ½å‡º
        echo -e "${BLUE}â±ï¸  é–“éš”æŒ‡å®šã§ã®æŠ½å‡ºä¸­... (${INTERVAL}ç§’é–“éš”)${NC}"
        
        if ffmpeg -i "$video" -vf "fps=1/$INTERVAL" "${ffmpeg_opts[@]}" "$output_pattern" -loglevel error -hide_banner 2>/dev/null; then
            extraction_count=$(find "$output_dir" -name "${filename}_*.$FORMAT" | wc -l)
        fi
    fi
    
    if [[ $extraction_count -gt 0 ]]; then
        echo -e "${GREEN}   âœ… ${extraction_count}æšã®é™æ­¢ç”»ã‚’æŠ½å‡ºã—ã¾ã—ãŸ${NC}"
        
        # ãƒ•ã‚¡ã‚¤ãƒ«ã‚µã‚¤ã‚ºè¨ˆç®—
        local total_size=0
        while IFS= read -r -d '' file; do
            local size=$(get_file_size "$file")
            total_size=$((total_size + size))
        done < <(find "$output_dir" -name "${filename}_*.$FORMAT" -print0)
        
        echo -e "${BLUE}   å‡ºåŠ›ã‚µã‚¤ã‚º: $(format_size $total_size)${NC}"
        log_success "é™æ­¢ç”»æŠ½å‡ºå®Œäº†: $video â†’ $extraction_countæš"
        return 0
    else
        echo -e "${RED}   âŒ é™æ­¢ç”»ã®æŠ½å‡ºã«å¤±æ•—ã—ã¾ã—ãŸ${NC}"
        log_error "é™æ­¢ç”»æŠ½å‡ºã‚¨ãƒ©ãƒ¼: $video"
        return 1
    fi
}

# ãƒ¡ã‚¤ãƒ³å‡¦ç†
main() {
    local files=("${FILES[@]}")
    local total=${#files[@]}
    local start_time=$(date +%s)
    local successful=0
    local failed=0
    local total_extracted=0
    
    echo -e "${PURPLE}ğŸ¬ å‹•ç”»é™æ­¢ç”»æŠ½å‡ºã‚’é–‹å§‹ã—ã¾ã™${NC}"
    echo -e "${WHITE}ãƒ•ã‚¡ã‚¤ãƒ«æ•°: $total | å½¢å¼: ${FORMAT^^} | å“è³ª: $QUALITY${NC}"
    
    if [[ "$THUMBNAIL_MODE" == "true" ]]; then
        echo -e "${WHITE}ãƒ¢ãƒ¼ãƒ‰: ã‚µãƒ ãƒã‚¤ãƒ«æŠ½å‡º${NC}"
    elif [[ -n "$SPECIFIC_TIME" ]]; then
        echo -e "${WHITE}ãƒ¢ãƒ¼ãƒ‰: ç‰¹å®šæ™‚é–“æŠ½å‡º ($SPECIFIC_TIME)${NC}"
    elif [[ "$KEYFRAMES_ONLY" == "true" ]]; then
        echo -e "${WHITE}ãƒ¢ãƒ¼ãƒ‰: ã‚­ãƒ¼ãƒ•ãƒ¬ãƒ¼ãƒ æŠ½å‡º${NC}"
    elif [[ -n "$NUMBER" ]]; then
        echo -e "${WHITE}ãƒ¢ãƒ¼ãƒ‰: æŒ‡å®šæšæ•°æŠ½å‡º (${NUMBER}æš)${NC}"
    else
        echo -e "${WHITE}ãƒ¢ãƒ¼ãƒ‰: é–“éš”æŠ½å‡º (${INTERVAL}ç§’)${NC}"
    fi
    
    if [[ -n "$OUTPUT_DIR" ]]; then
        echo -e "${WHITE}å‡ºåŠ›: $OUTPUT_DIR${NC}"
    fi
    echo
    
    local current=0
    for file in "${files[@]}"; do
        ((current++))
        
        if ! check_file_extension "$file" "mp4" && 
           ! check_file_extension "$file" "mov" && 
           ! check_file_extension "$file" "avi" && 
           ! check_file_extension "$file" "mkv"; then
            echo -e "${YELLOW}ğŸ“ ãƒ•ã‚¡ã‚¤ãƒ« ${current}/${total}: $(basename "$file")${NC}"
            echo -e "${YELLOW}   âš ï¸  ã‚¹ã‚­ãƒƒãƒ—: å¯¾å¿œã—ã¦ã„ãªã„å‹•ç”»å½¢å¼${NC}"
            ((failed++))
            continue
        fi
        
        # ãƒ•ã‚¡ã‚¤ãƒ«æ¤œè¨¼
        if ! verify_file "$file" "video"; then
            echo -e "${YELLOW}ğŸ“ ãƒ•ã‚¡ã‚¤ãƒ« ${current}/${total}: $(basename "$file")${NC}"
            echo -e "${RED}   âŒ ç„¡åŠ¹ãªå‹•ç”»ãƒ•ã‚¡ã‚¤ãƒ«${NC}"
            ((failed++))
            continue
        fi
        
        echo -e "${YELLOW}ğŸ“ ãƒ•ã‚¡ã‚¤ãƒ« ${current}/${total}: $(basename "$file")${NC}"
        
        local input_size=$(get_file_size "$file")
        echo -e "${BLUE}   å…¥åŠ›ã‚µã‚¤ã‚º: $(format_size $input_size)${NC}"
        
        local output_dir=$(generate_output_dir "$file" "$OUTPUT_DIR")
        echo -e "${BLUE}   å‡ºåŠ›å…ˆ: $(basename "$output_dir")${NC}"
        
        if extract_frames "$file" "$output_dir"; then
            ((successful++))
            # æŠ½å‡ºã—ãŸæšæ•°ã‚’è¨ˆç®—
            local basename=$(basename "$file")
            local filename="${basename%.*}"
            local extracted=$(find "$output_dir" -name "${filename}_*.$FORMAT" 2>/dev/null | wc -l)
            total_extracted=$((total_extracted + extracted))
        else
            ((failed++))
        fi
        
        show_progress $current $total
        echo
    done
    
    local end_time=$(date +%s)
    local total_duration=$((end_time - start_time))
    
    echo -e "${GREEN}ğŸ‰ é™æ­¢ç”»æŠ½å‡ºãŒå®Œäº†ã—ã¾ã—ãŸï¼${NC}"
    echo -e "${WHITE}æˆåŠŸ: $successful | å¤±æ•—: $failed | ç·æŠ½å‡ºæšæ•°: $total_extracted${NC}"
    echo -e "${WHITE}ç·å‡¦ç†æ™‚é–“: $(format_duration $total_duration)${NC}"
    
    # é€šçŸ¥é€ä¿¡
    if [[ $total_extracted -gt 0 ]]; then
        send_notification "Media-to-Media" "${total_extracted}æšã®é™æ­¢ç”»ã‚’æŠ½å‡ºã—ã¾ã—ãŸ" "Glass"
    fi
    
    log_info "é™æ­¢ç”»æŠ½å‡ºå®Œäº†: æˆåŠŸ=$successful, å¤±æ•—=$failed, æŠ½å‡ºæšæ•°=$total_extracted, æ™‚é–“=${total_duration}s"
}

# ãƒ¡ã‚¤ãƒ³å®Ÿè¡Œ
main 